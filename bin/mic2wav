#!/usr/bin/env bash
# author: Daniel Rode
# dependencies: ffmpeg
# created: 18 feb 2026


# Record microphone and save to audio file.
#
# TODO support pressing "space" to pause/resume recording


if [[ -z $1 ]]
then
	echo "Specify output path for WAV"
	exit 1
fi

ffmpeg -f pulse -i default -f wav - > "$1"


