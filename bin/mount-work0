#!/usr/bin/env bash
# author: daniel rode
# created: 09 jan 2026
# updated: 14 jan 2026


args=(
	--file-perms 600
	--poll-interval 33s
	--dir-cache-time 9999w
	--vfs-refresh
	--vfs-cache-mode full
	--vfs-write-back 5s
	--vfs-cache-max-age 9999w
	work0_onedrive:union/work0
	~/union/work0
)
rclone mount "${args[@]}"
