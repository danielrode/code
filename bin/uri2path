#!/usr/bin/env python3
# Author: Daniel Rode
# Name: URI to Path
# Type: text manipulation, file management
# Description: Converts URI file paths to standard path format
# Dependencies:
# Version: 1.0
# Made: Dec 14 2018
# Last updated: First version


import sys
from sys import exit
from urllib.parse import unquote


# Parse arguments
args = iter(sys.argv[1:])


# Main
for uri_string in args:
	path_string = uri_string.lstrip('file://')
	path_string = unquote(path_string)
	print('/' + path_string)
